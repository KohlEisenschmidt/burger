<div>
    {{!-- image --}}
      <img class="burgerimg" src="../public/assets/images/bacon-burger.png">
</div>
<h1>Eat Da Burger!</h1>

<ul id="uneaten">

    {{#each burgers}} {{#unless devoured}}
    <li>
        {{burger_name}} {{#unless devoured}}
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="1">DEVOUR IT!</button>{{/unless}}
    </li>
    {{/unless}} {{/each}}
</ul>

<ul id="eaten">
    {{#each burgers}} {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}} {{/each}}
</ul>


<form class="create-form">

    <div class="form-group">
        <input type="text" id="newburger" name="name">
    </div>
    <button type="submit">Add Burger!</button>
</form>
<h2>Enter a Burger you want to submit</h2>

